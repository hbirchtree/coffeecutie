[Application]
name=@FLATPAK_PKG_NAME@
runtime=org.freedesktop.Platform/@FLATPAK_ARCH@/23.08
sdk=org.freedesktop.Sdk/@FLATPAK_ARCH@/23.08
command=@FLATPAK_EXEC@

[Environment]
COFFEE_NO_PROFILER_EXPORT=1
APPIMAGE_DATA_DIR=/app/assets
LD_LIBRARY_PATH=/app/lib

[Context]
shared=network;ipc;
sockets=wayland;fallback-x11;pulseaudio;
devices=dri;input;
filesystems=~/.local/share/@FLATPAK_CONFIG@:create;~/.cache/@FLATPAK_CONFIG@:create;host-etc:ro

[Extension org.freedesktop.Platform.GL]
version=23.08
directory=lib/GL

[Extension org.freedesktop.Platform.Timezones]
directory=share/zoneinfo

[Extension org.freedesktop.Platform.Locale]
directory=share/runtime/locale
subdirectories=true
