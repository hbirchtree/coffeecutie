<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="@ANDROID_VERSION_CODE@"
      android:versionName="@ANDROID_VERSION_NAME@"
      android:installLocation="auto">

    @ANDROID_FEATURES@
    @ANDROID_PERMISSIONS@

    <!-- To allow reading from /sdcard/Android/data/<pkg-name>/files -->
    <uses-permission
        android:maxSdkVersion="19"
        android:name="android.permission.READ_EXTERNAL_STORAGE"
    />

    <application
            android:label="@string/app_name"
            android:hasCode="true"
            android:banner="@drawable/ic_banner"
            android:icon="@mipmap/ic_launcher"
            android:allowBackup="true"
            android:theme="@style/Fullscreen"
            android:hardwareAccelerated="true"
            android:fullBackupContent="@xml/backup_descriptor">
        <activity 
                android:name="@ANDROID_ACTIVITY_NAME@"
                android:exported="true"
                android:label="@string/app_name"
                android:configChanges="keyboardHidden|orientation|keyboard|density|screenLayout|screenSize|smallestScreenSize"
                android:screenOrientation="@ANDROID_ORIENTATION_MODE@">
            <meta-data android:name="android.app.lib_name" android:value="@ANDROID_STARTUP_LIBRARY@"/>
            <meta-data android:name="android.app.func_name" android:value="@ANDROID_STARTUP_FUNCTION@"/>
            <meta-data android:name="com.nvidia.immediateInput" android:value="true" />
            <meta-data android:name="com.nvidia.rawCursorInput" android:value="true" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest> 
