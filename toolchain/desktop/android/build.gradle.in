apply plugin: 'com.android.application'
apply plugin: 'org.jetbrains.kotlin.android'

android {
    compileSdkVersion @ANDROID_API_TARGET@
    ndkVersion '@ANDROID_NDK_VER@'
    buildToolsVersion '@ANDROID_BUILD_TOOLS_VER@'

    defaultConfig {
        applicationId '@ANDROID_PACKAGE_NAME@'
        minSdkVersion @ANDROID_API_MIN_TARGET@
        targetSdkVersion @ANDROID_API_TARGET@
    }

    flavorDimensions += 'version'
    productFlavors {
        create('legacy') {
            dimension 'version'
            versionNameSuffix '-legacy'
        }
        create('modern') {
            dimension 'version'
        }
    }

    dependencies {
        modernImplementation 'androidx.core:core-splashscreen:1.0.0'
    }

    buildTypes {
        release {
            minifyEnabled true
            zipAlignEnabled true
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.txt'
        }
        debug {
            minifyEnabled false
            debuggable true
        }
    }
    namespace '@ANDROID_PACKAGE_NAME@'
}
