      "supports": "!windows"
    },
    "filesystem": {
      "description": "Dynamically load X11 support",
      "supports": "!windows"
    },
    "pipewire": {
      "description": "Dynamically load X11 support",
      "supports": "!windows"
    },
    "pulse": {
      "description": "Dynamically load X11 support",
      "supports": "!windows"
    },
    "render": {
      "description": "Dynamically load X11 support",
      "supports": "!windows"
    },
    "sensor": {
