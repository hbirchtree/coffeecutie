{
    "name": "coffeecutie",
    "license": "MIT",
    "version-string": "4.0",
    "dependencies": [
        { "name": "appimage-runtime", "platform": "linux" },
        "boost-outcome",
        "boost-stacktrace",
        "cppcodec",
        "cxxopts",
        "magic-enum",
        "ms-gsl",
        "lz4",
        "rapidjson",
        "sqlite3",
        "stb",
        "tinyxml2",
        "tinyutf8",
        { "name": "zlib-ng", "platform": "(linux & x64) | osx | windows" },
        "zstd"
    ],
    "features": {
        "assimp": {
            "description": "Model processing",
            "dependencies": [
                { "name": "assimp", "platform": "(linux & x64) | osx | windows" }
            ]
        },
        "audio": {
            "description": "Audio output support",
            "dependencies": [
                { "name": "openal-soft", "platform": "linux | osx | windows | android" },
                { "name": "libogg", "platform": "!emscripten" }
            ]
        },
        "blam": { "description": "Blam! data support" },
        "crash-recovery": { "description": "Crash reporting and logging tool"},
        "headful": { 
            "description": "Graphical support",
            "dependencies": [
                { "name": "discord-rpc", "platform": "(linux & x64) | osx | (windows & !mingw)" },
                { "name": "sdl2", "platform": "linux & x64", "default-features": false, "features": ["offscreen", "wayland", "x11"] },
                { "name": "sdl2", "platform": "linux & arm & wayland", "default-features": false, "features": ["wayland", "x11"] },
                { "name": "sdl2", "platform": "linux & arm & raspberry", "default-features": false, "features": [] },
                { "name": "sdl2", "platform": "osx | windows"}
            ]
        },
        "gleam": {
            "description": "Desktop OpenGL + Mobile OpenGL ES rendering library",
            "dependencies": [
                { "name": "angle", "platform": "windows & uwp" },
                "bcdec",
                { "name": "imgui", "features": ["docking-experimental"]}
            ]
        },
        "image": {
            "description": "Image export and import",
            "dependencies": [
            ]
        },
        "media": {
            "description": "Media encoding",
            "dependencies": [
                { "name": "ffmpeg", "platform": "(linux & x64) | (windows & !mingw)" }
            ]
        },
        "network": {
            "description": "Networking support",
            "dependencies": [
                "asio"
            ]
        },
        "openssl": {
            "description": "OpenSSL support in ASIO + some crypto functionality",
            "dependencies": [
                { "name": "openssl", "platform": "!emscripten" }
            ]
        },
        "physics": {
            "description": "Physics support",
            "dependencies": [
                "bullet2"
            ]
        },
        "pressure-cooker": {
            "description": "Asset packing utilities",
            "dependencies": [
                { "name": "etc2comp", "platform": "(linux & x64) | osx | windows" },
                { "name": "glslang", "platform": "(linux & x64) | osx | windows" },
                { "name": "ktx", "platform": "(linux & x64) | osx | windows" },
                { "name": "libsquish", "platform": "(linux & x64) | osx | windows" },
                { "name": "shaderc", "platform": "(linux & x64) | osx | windows" },
                { "name": "spirv-cross", "platform": "(linux & x64) | osx | windows" }
            ]
        }
    },
    "default-features": [
        "assimp",
        "audio",
        "blam",
        "crash-recovery",
        "headful",
        "gleam",
        "image",
        "media",
        "network",
        "openssl",
        "physics",
        "pressure-cooker"
    ]
}
