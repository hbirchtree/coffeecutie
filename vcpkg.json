{
    "name": "coffeecutie",
    "license": "MIT",
    "version-string": "4.0",
    "dependencies": [
        { "name": "angle", "platform": "windows | uwp" },
        "asio",
        "boost-outcome",
        "boost-stacktrace",
        "bullet3",
        "cppcodec",
        { "name": "discord-rpc", "platform": "(linux & x64) | osx | windows" },
        { "name": "ffmpeg", "platform": "(linux & x64) | osx | windows" },
        "ms-gsl",
        "imgui",
        "lz4",
        { "name": "openvr", "platform": "windows" },
        "rapidjson",
        { "name": "sdl2", "platform": "linux | osx | windows", "default-features": false, "features": ["x11"] },
        "sqlite3",
        "stb",
        "tinyxml2",
        "tinyutf8",
        { "name": "zlib", "platform": "!emscripten" },
        "zstd"
    ],
    "features": {
        "asio": {
            "description": "ASIO networking lib",
            "dependencies": ["asio"]
        },
        "assimp": {
            "description": "Model processing",
            "dependencies": [
                { "name": "assimp", "platform": "(linux & x64) | osx | windows" }
            ]
        },
        "audio": {
            "description": "Audio output support",
            "dependencies": [
                { "name": "openal-soft", "platform": "linux | osx | windows | android" },
                { "name": "libogg", "platform": "!emscripten" }
            ]
        },
        "blam": { "description": "Blam! data support" },
        "crash-recovery": { "description": "Crash reporting and logging tool"},
        "headful": { "description": "Graphical support" },
        "media": {
            "description": "Media encoding",
            "dependencies": [
                { "name": "ffmpeg", "platform": "linux | osx | windows" }
            ]
        },
        "openssl": {
            "description": "OpenSSL support in ASIO + some crypto functionality",
            "dependencies": [
                { "name": "openssl", "platform": "!emscripten" }
            ]
        },
        "etc2comp": {
            "description": "ETC1/ETC2 compression support"
        },
        "pressure-cooker": {
            "description": "Asset packing utilities",
            "dependencies": [
                { "name": "ffmpeg", "platform": "(linux & x64) | osx | windows" },
                { "name": "glslang", "platform": "(linux & x64) | osx | windows" },
                { "name": "libsquish", "platform": "(linux & x64) | osx | windows" },
                { "name": "shaderc", "platform": "(linux & x64) | osx | windows" },
                { "name": "spirv-cross", "platform": "(linux & x64) | osx | windows" }
            ]
        }
    },
    "default-features": [
        "asio",
        "assimp",
        "audio",
        "blam",
        "crash-recovery",
        "headful",
        "media",
        "openssl",
        "etc2comp",
        "pressure-cooker"
    ]
}
