{
    "name": "coffeecutie",
    "license": "MIT",
    "version-string": "4.0",
    "dependencies": [
        { "name": "boost-stacktrace", "platform": "!bare" },
        { "name": "boost-outcome", "platform": "android | emscripten | (arm & linux) | (x64 & linux) | windows" },
        { "name": "cppcodec", "platform": "!bare" },
        "cxxopts",
        { "name": "fmt" },
        "glm",
        { "name": "ktx", "features": ["vulkan"], "platform": "!bare" },
        "magic-enum",
        "ms-gsl",
        { "name": "outcome", "platform": "!android & !emscripten & !(arm & linux) & !(x64 & linux) & !windows" },
        { "name": "pvrtcdec", "platform": "android | emscripten | (linux & x64)" },
        "rapidjson",
        "stb",
        "tinyxml2",
        "tinyutf8",
        { "name": "zlib-ng", "platform": "(linux & x64) | osx | windows" },
        "zstd",
        { "name": "gctools", "platform": "gamecube | wii", "host": true },
        { "name": "libogc", "platform": "gamecube | wii" },
        { "name": "glslang", "host": true }
    ],
    "features": {
        "assimp": {
            "description": "Model processing",
            "dependencies": [
                { "name": "assimp", "platform": "(linux & x64) | osx | windows" }
            ]
        },
        "audio": {
            "description": "Audio output support",
            "dependencies": [
                { "name": "openal-soft", "platform": "linux | osx | windows | android" },
                { "name": "libogg", "platform": "!emscripten" }
            ]
        },
        "blam": { "description": "Blam! data support" },
        "crash-recovery": { "description": "Crash reporting and logging tool"},
        "headful": { 
            "description": "Graphical support",
            "dependencies": [
                { "name": "appimage-runtime", "platform": "linux & (x64 | arm64)" },
                { "name": "discord-rpc", "platform": "(linux & x64) | osx | (windows & !mingw)" },
                { "name": "sdl2", "platform": "linux & x64", "default-features": false, "features": ["offscreen", "wayland", "x11"] },
                { "name": "sdl2", "platform": "linux & arm & wayland & !x11", "default-features": false, "features": ["wayland"] },
                { "name": "sdl2", "platform": "linux & arm & wayland & x11", "default-features": false, "features": ["wayland", "x11"] },
                { "name": "sdl2", "platform": "linux & arm & raspberry", "default-features": false, "features": [] },
                { "name": "sdl2", "platform": "osx | windows | mingw"},
                { "name": "pvrscope", "platform": "linux & arm & beaglebone" },
                { "name": "nvidia-gdk", "platform": "linux & x64" }
            ]
        },
        "gleam": {
            "description": "Desktop OpenGL + Mobile OpenGL ES rendering library",
            "dependencies": [
                { "name": "angle", "platform": "windows & uwp" },
                "bcdec",
                { "name": "glslang", "features": ["tools"], "host": true },
                { "name": "imgui", "features": ["docking-experimental"]},
                "vulkan-headers"
            ]
        },
        "image": {
            "description": "Image export and import",
            "dependencies": [
            ]
        },
        "media": {
            "description": "Media encoding",
            "dependencies": [
                { "name": "ffmpeg", "platform": "(linux & x64) | (windows & !mingw)" }
            ]
        },
        "network": {
            "description": "Networking support",
            "dependencies": [
                "asio",
                "flatbuffers",
                { "name": "flatbuffers", "host": true },
                { "name": "gamenetworkingsockets", "platform": "!emscripten & !(android & arm32)" }
            ]
        },
        "openssl": {
            "description": "OpenSSL support in ASIO + some crypto functionality",
            "dependencies": [
                { "name": "openssl", "platform": "!emscripten" }
            ]
        },
        "physics": {
            "description": "Physics support",
            "dependencies": [
                "bullet2"
            ]
        },
        "pressure-cooker": {
            "description": "Asset packing utilities",
            "dependencies": [
                { "name": "bc7enc", "platform": "(linux & x64) | osx | windows" },
                { "name": "etc2comp", "platform": "(linux & x64) | osx | windows" },
                { "name": "glslang", "platform": "(linux & x64) | osx | windows" },
                { "name": "ktx", "platform": "(linux & x64) | osx | windows" },
                { "name": "libsquish", "platform": "(linux & x64) | osx | windows" },
                { "name": "shaderc", "platform": "(linux & x64) | osx | windows" },
                { "name": "spirv-cross", "platform": "(linux & x64) | osx | windows" },
                "vulkan-headers"
            ]
        }
    },
    "default-features": [
        "assimp",
        "audio",
        "blam",
        "headful",
        "gleam",
        "image",
        "media",
        "network",
        "openssl",
        "physics"
    ]
}
