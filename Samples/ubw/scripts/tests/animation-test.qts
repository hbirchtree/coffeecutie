function rotateGears(){
	var inst1 = world.gear.mesh.instances.getInstanceQObject(1);
	inst1.rotation.mathCumulate([1,0,0,0.001]);
	var inst0 = world.gear.mesh.instances.getInstanceQObject(0);
	inst0.rotation.mathCumulate([1,0,0,-0.001]);
	
	inst1.deleteLater();
	inst0.deleteLater();
}

var anim = new QTimer;
anim.interval = 5;
anim.timeout.connect(rotateGears);
anim.start();

function createGrassGrid(sz){
	print("Creating grass grid:",Math.pow(sz,2));
	var grass = world.grass.mesh;
	for(var i=0;i<Math.pow(sz,2);i++){
		grass.instances.createInstance();
		var inst = grass.instances.getInstanceQObject(i);
		inst.scale.value = [1,1,1];
		var x = Math.floor(i/sz);
		var y = i-x*sz;
		inst.position.value = [x,0,y];
		inst.deleteLater();
	}
	grass.useInstancing = true;
	print("Grass grid created");
}
createGrassGrid(10);
